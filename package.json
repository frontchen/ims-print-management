{
  "name": "wistar-pms",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --mode dev",
    "build": "vue-cli-service build --mode prod",
    "lint": "vue-cli-service lint",
    "clean": "rm -rf dist .temp && mkdir -p .temp/",
    "upload-test": "tar -cvf .temp/dist.tar dist/ && fab deploy-test",
    "upload": "tar -cvf .temp/dist.tar dist/ && fab deploy",
    "deploy-test": "yarn clean && yarn install && vue-cli-service build --mode test && yarn upload-test",
    "deploy": "yarn clean && yarn install && vue-cli-service build --mode prod && yarn upload"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "core-js": "^3.4.3",
    "crypto-js": "^4.0.0",
    "element-ui": "^2.13.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "querystring": "^0.2.0",
    "vue": "^2.6.10",
    "vue-fullscreen": "^2.1.5",
    "vue-loading-spinner": "^1.0.11",
    "vue-perfect-scrollbar": "^0.2.1",
    "vue-router": "^3.1.3",
    "vuetify": "^2.1.13",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.1.0",
    "@vue/cli-plugin-eslint": "^4.1.0",
    "@vue/cli-service": "^4.1.0",
    "babel-eslint": "^10.0.3",
    "babel-polyfill": "^6.26.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "sass": "^1.23.7",
    "sass-loader": "^8.0.0",
    "vue-cli-plugin-vuetify": "^2.0.2",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.4.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "vue/no-parsing-error": [
        2,
        {
          "x-invalid-end-tag": false
        }
      ],
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
